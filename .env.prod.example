# Production Environment Variables for Family Wiki
# Copy this to .env.prod and fill in your values

# Domain Configuration (REQUIRED)
DOMAIN_NAME=your-domain.com
CERTBOT_EMAIL=your-email@example.com

# Database Configuration (REQUIRED)
POSTGRES_DB=family_wiki
POSTGRES_USER=family_wiki_user
POSTGRES_PASSWORD=your-secure-database-password

# Security Configuration (REQUIRED)
SECRET_KEY=your-very-secure-secret-key-change-this

# Ollama Configuration (REQUIRED)
OLLAMA_HOST=your-ollama-server.com
OLLAMA_PORT=11434
OLLAMA_MODEL=aya:35b-23

# Celery Configuration (Optional - defaults provided)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Flask Configuration (Optional)
WTF_CSRF_ENABLED=True